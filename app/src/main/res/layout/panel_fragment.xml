<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo2"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_checkEngine"
            android:layout_width="60dp"
            android:layout_height="46dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="35dp"
            android:background="@drawable/check_engine1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="400dp"
            android:layout_height="400dp"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/icono_datoSincr"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="330dp" />

            <ImageView
                android:id="@+id/img_galongasolina"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="50dp"
                android:layout_marginRight="40dp"/>

            <com.sccomponents.gauges.ScArcGauge xmlns:sc="http://schemas.android.com/apk/res-auto"
                android:id="@+id/gauge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|bottom"
                android:layout_marginRight="25dp"
                android:padding="50dp"
                sc:angleStart="180"
                sc:angleSweep="90"
                sc:strokeSize="50dp" />

            <ImageView
                android:id="@+id/indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|right"
                android:layout_marginLeft="200dp"
                android:layout_marginTop="278dp"
                android:src="@drawable/indicator" />

            <TextView
                android:id="@+id/txv_porcentajeGasolina"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="90dp"
                android:layout_marginRight="10dp"
                android:text="0"
                android:textColor="#f5f5f5"
                android:textSize="50dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/counter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|right"
                android:layout_marginRight="85dp"
                android:layout_marginTop="350dp"
                android:text="0Â°"
                android:textColor="#f5f5f5"
                android:textSize="23dp"
                android:textStyle="bold" />

        </FrameLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:background="@color/colorAccent"
                android:text="0"
                android:textColor="@color/window_background"
                android:textSize="45dp" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:background="@color/colorAccent"
                android:text="0"
                android:textColor="@color/window_background"
                android:textSize="45dp" />

            <TextView
                android:id="@+id/textView2"
