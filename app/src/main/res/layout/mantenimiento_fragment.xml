<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="208dp"
        android:layout_margin="5dp"
        android:layout_marginTop="15dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="Componentes sometidos a mantenimiento:"
            android:textColor="@color/colorAccent"
            android:textSize="15dp"
            android:textStyle="bold" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_mantenimieto"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/tekken250" />

            <Button
                android:id="@+id/btn_ruedas"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginLeft="30dp"
                android:background="@drawable/btn_circle"
                android:text="Ruedas"
                android:textSize="8dp" />

            <Button
                android:id="@+id/btn_pernos_chasis"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="bottom"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/btn_circle"
                android:text="Pernos-chasis"
                android:textSize="8dp" />

            <Button
                android:id="@+id/btn_aceite_motor"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="left|center"
                android:layout_marginLeft="5dp"
                android:background="@drawable/btn_circle"
                android:text="Aceite-motor"
                android:textSize="8dp" />

            <Button
                android:id="@+id/btn_bujia"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="center|top"
                android:background="@drawable/btn_circle"
                android:text="Bujía"
                android:textSize="8dp" />

            <Button
                android:id="@+id/btn_cadena"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="bottom|right"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/btn_circle"
                android:text="Cadena"
                android:textSize="8dp" />

            <Button
                android:id="@+id/btn_pernos_escape"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="center|right"
                android:layout_marginRight="5dp"
                android:background="@drawable/btn_circle"
                android:text="Pernos-Escape"
                android:textSize="8dp" />

            <Button
                android:id="@+id/btn_filtro_aire"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="top|right"
                android:layout_marginRight="5dp"
                android:background="@drawable/btn_circle"
                android:text="Filtro-aire"
                android:textSize="8dp" />

            <ImageView
                android:id="@+id/img_point_to_bujia"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:layout_gravity="center_vertical|center_horizontal"
                android:background="@drawable/img_circle_transparente"/>
            <ImageView
                android:id="@+id/img_point_to_rueda1"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginTop="18dp"
                android:layout_marginRight="110dp"
                android:layout_gravity="center_vertical|center_horizontal"
                android:background="@drawable/img_circle_transparente"/>
            <ImageView
                android:id="@+id/img_point_to_aceite_motor"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="35dp"
                android:layout_marginRight="10dp"
                android:layout_gravity="center_vertical|center_horizontal"
                android:background="@drawable/img_circle_transparente" />
            <ImageView
                android:id="@+id/img_point_to_pernos_chasis"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginTop="50dp"
                android:layout_marginRight="6dp"
                android:layout_gravity="center_vertical|center_horizontal"
                android:background="@drawable/img_circle_transparente"  />
            <ImageView
                android:id="@+id/img_point_to_filtro_aire"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="6dp"
                android:layout_gravity="center_vertical|center_horizontal"
                android:background="@drawable/img_circle_transparente" />
            <ImageView
                android:id="@+id/img_point_to_pernos_escape"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="75dp"
                android:layout_gravity="center_vertical|center_horizontal"
                android:background="@drawable/img_circle_transparente" />
            <ImageView
                android:id="@+id/img_point_to_cadena"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginTop="48dp"
                android:layout_marginLeft="40dp"
                android:layout_gravity="center_vertical|center_horizontal"
                android:background="@drawable/img_circle_transparente" />
        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Cumplimiento de los mantenimientos"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            android:textSize="17dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal">
            <TextView
                android:text="Años:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/colorAccent"/>
            <Spinner
                android:id="@+id/spnr_año"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:layout_marginRight="20dp"
                android:touchscreenBlocksFocus="true">
            </Spinner>
            <TextView
                android:text="Meses:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/colorAccent"/>
            <Spinner
                android:id="@+id/spnr_meses"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="left"
                android:entries="@array/auxspnrMeses"
                android:touchscreenBlocksFocus="false">
            </Spinner>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/lineChart"
                android:layout_width="match_parent"
                android:layout_height="250dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>